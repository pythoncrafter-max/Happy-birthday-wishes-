<body>

  <h1>🎁 Birthday Wish Game 🎁</h1>
  <p>Choose how you want to wish <strong>Shashank</strong>:</p>

  <div class="options">
    <button onclick="showMessage(1)">🎉 Fun Style</button>
    <button onclick="showMessage(2)">❤️ Emotional</button>
    <button onclick="showMessage(3)">😂 Meme Style</button>
  </div>

  <div id="birthday-message" class="message"></div>

  <script>
    function showMessage(option) {
      const msgBox = document.getElementById('birthday-message');
      let message = "";

      switch(option) {
        case 1:
          message = "🎊 Happy Birthday Shashank! May your life be filled with fun, laughter, and amazing memories! 🎈";
          break;
        case 2:
          message = "💖 Shashank, on your special day, know that you're deeply appreciated and loved. Wishing you endless joy and success. Happy Birthday! 🌟";
          break;
        case 3:
          message = "😂 Shashank, you're now officially one year closer to being that uncle who tells the same story 5 times. Happy Birthday bro! 🎂🤣";
          break;
      }

      msgBox.textContent = message;
      msgBox.style.display = "block";
    }
  </script>

</body>
</html>
